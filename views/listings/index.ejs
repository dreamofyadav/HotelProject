  <div id="filters">

    <a href="/listings?category=trending" class="filter <% if (selectedCategory === "trending") { %> active-category <% } %>">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
  
    <a href="/listings?category=rooms" class="filter <% if (selectedCategory === 'rooms') { %>active-category<% } %>">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=iconic_city" class="filter <% if (selectedCategory === 'iconic_city') { %>active-category<% } %>">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>

    <a href="/listings?category=mountains" class="filter <% if (selectedCategory === 'mountains') { %>active-category<% } %>">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>

    <a href="/listings?category=castles" class="filter <% if (selectedCategory === 'castles') { %>active-category<% } %>">
      <div><i class="fa-solid fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>

    <a href="/listings?category=amazing_pools" class="filter <% if (selectedCategory === 'amazing_pools') { %>active-category<% } %>">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>

    <a href="/listings?category=camping" class="filter <% if (selectedCategory === 'camping') { %>active-category<% } %>">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    
    <a href="/listings?category=farms" class="filter <% if (selectedCategory === 'farms') { %>active-category<% } %>">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>
    
    <a href="/listings?category=arctic" class="filter <% if (selectedCategory === 'arctic') { %>active-category<% } %>">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </a>
   
    <div class="tax-toggle d-none d-lg-block">
        <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>

  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top imgcard" style="height: 20rem" alt="listing_image"/>
      <!-- <div class="card-img-overlay"></div> -->
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night  
        <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
        </p>
      </div>
    </div>
    </a>
    <% } %>
  </div>

